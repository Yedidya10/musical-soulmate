// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models user related
model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique
  password      String
  firstName     String
  lastName      String
  age           Int?
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userProfileId Int
  profile       UserProfile?
}

model UserProfile {
  id               Int             @id @default(autoincrement())
  user             User            @relation(fields: [userId], references: [id])
  userId           Int             @unique
  bio              String?
  favoriteArtists  ArtistProfile[]
  favoriteTracks   Track[]
  userPlaylists    UserPlaylist[]
  playedRecently   PlayedRecently? @relation(fields: [playedRecentlyId], references: [id])
  playedRecentlyId Int?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model PasswordResetRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model EmailChangeRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  newEmail   String
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// models music related
model ArtistProfile {
  id            Int          @id @default(autoincrement())
  name          String
  slug          String       @unique
  bio           String?
  albums        Album[]
  tracks        Track[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId Int?
}

model Album {
  id        Int             @id @default(autoincrement())
  title     String
  artists   ArtistProfile[]
  tracks    Track[]
  release   DateTime
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model Track {
  id               Int             @id @default(autoincrement())
  albumId          Int
  title            String
  artists          ArtistProfile[]
  userPlaylists    UserPlaylist[]
  album            Album?          @relation(fields: [albumId], references: [id])
  length           Int
  release          DateTime
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  UserProfile      UserProfile?    @relation(fields: [userProfileId], references: [id])
  userProfileId    Int?
  played           TrackPlayed[]
  playedRecently   PlayedRecently? @relation(fields: [playedRecentlyId], references: [id])
  playedRecentlyId Int?
}

model UserPlaylist {
  id             Int              @id @default(autoincrement())
  title          String
  author         UserProfile      @relation(fields: [authorId], references: [id])
  authorId       Int
  tracks         Track[]
  length         Int
  userCreatedOn  DateTime
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  PlaylistPlayed PlaylistPlayed[]
}

model TrackPlayed {
  id         Int      @id @default(autoincrement())
  track      Track    @relation(fields: [trackId], references: [id])
  trackId    Int
  datePlayed DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PlaylistPlayed {
  id         Int          @id @default(autoincrement())
  playlist   UserPlaylist @relation(fields: [playlistId], references: [id])
  playlistId Int
  datePlayed DateTime
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model PlayedRecently {
  id          Int           @id @default(autoincrement())
  tracks      Track[]
  trackId     Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userProfile UserProfile[]
}

enum Role {
  ADMIN
  USER
}
